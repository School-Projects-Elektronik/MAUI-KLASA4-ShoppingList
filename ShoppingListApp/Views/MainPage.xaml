<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:ShoppingListApp.Models"
             xmlns:views="clr-namespace:ShoppingListApp.Views"
             x:Class="ShoppingListApp.Views.MainPage"
             Title="Lista Zakupów">

    <Grid RowDefinitions="Auto, *" Padding="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Entry x:Name="NameEntry" Placeholder="Nazwa produktu" />
            <Grid ColumnDefinitions="*, *">
                <Entry x:Name="UnitEntry" Placeholder="Jednostka" Grid.Column="0" />
                <Entry x:Name="QuantityEntry" Placeholder="Ilość" Keyboard="Numeric" Grid.Column="1" />
            </Grid>
            <Button Text="Dodaj do listy" Clicked="OnAddItemClicked" BackgroundColor="DarkGreen" TextColor="White" />
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" x:Name="ItemsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ShoppingItem">
                    <views:ProductView DeleteCommand="{Binding Source={RelativeSource AncestorType={x:Type views:MainPage}}, Path=DeleteProductCommand}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>